<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ActivityDetallesProducto"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v4.view.ViewPager xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/view_pager"
                android:layout_width="match_parent"
                android:layout_height="320dp"
                android:background="#000"
                tools:context="com.example.adrian.telovendo.activities.ActivityDetallesProducto" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textPrecioDetalle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="120.3 €"
                        android:textSize="30sp"
                        android:textStyle="bold" />

                    <ImageButton
                        android:id="@+id/buttonChat"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_margin="4dp"
                        android:padding="11dp"
                        android:layout_weight="0"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/ic_button_chat"
                        android:background="@drawable/round_button" />

                </LinearLayout>

                <View
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="0.6dp"
                    android:layout_weight="1"
                    android:background="@color/grisClaro" />

                <TextView
                    android:id="@+id/textNombreDetalle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="Subaru Impreza 218cv."
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/textDescripcionDetalle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Techo solar... tracción 4 ruedas... asiento recaro.. y más extras"
                    android:textSize="20dp"/>

                <View
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="0.6dp"
                    android:layout_weight="1"
                    android:background="@color/grisClaro" />

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/textCategoriaDetalle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Motor"
                            style="@style/estiloEtiqueta"/>

                        <TextView
                            android:id="@+id/textMarcaDetalle"
                            style="@style/estiloEtiqueta"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Subaru"
                            android:visibility="invisible" />

                        <TextView
                            android:id="@+id/textModeloDetalle"
                            style="@style/estiloEtiqueta"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Impreza"
                            android:visibility="invisible" />
                    </LinearLayout>
                </HorizontalScrollView>

                <View
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="0.6dp"
                    android:layout_weight="1"
                    android:background="@color/grisClaro" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/imagenFotoUsuario"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/avatar" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:foregroundGravity="center_vertical"
                        android:gravity="center_vertical"
                        android:orientation="vertical"
                        android:padding="8dp">

                        <TextView
                            android:id="@+id/textNombreUsuario"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:text="Antonio G."
                            android:textSize="22dp"
                            android:textStyle="bold" />

                        <RatingBar
                            android:id="@+id/ratingBarUsuario"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            style="@style/myRatingBar" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>